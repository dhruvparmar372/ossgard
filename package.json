{
  "name": "ossgard",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "dev": "bun run --cwd packages/api dev",
    "build:cli": "bun run --cwd packages/cli build:bin",
    "build:api": "bun run --cwd packages/api build:bin"
  }
}
